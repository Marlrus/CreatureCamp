<% include ../partials/header %>
<div class="container">

    <h1 class="text-center">Create a new campground</h1>

    <form action="/campgrounds" method="POST">
        <div class="row">
            <div class="col-10 col-md-7 col-lg-6" style="margin: 25px auto;">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="name" name="newCampground[name]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="image url" name="newCampground[image]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="description" name="newCampground[description]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" placeholder="price" name="newCampground[price]" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <button class="btn btn-md btn-primary btn-block">Submit!</button>
                </div>
                <a href="/campgrounds">Go back to Campgrounds!</a>
            </div>
        </div>
    </form>


</div>
<% include ../partials/footer %>
