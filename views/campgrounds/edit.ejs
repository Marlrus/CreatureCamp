<% include ../partials/header %>
<div class="container">

    <h1 class="text-center">Edit "<%=campground.name%>"</h1>

    <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
        <div class="row">
            <div class="col-10 col-md-7 col-lg-6" style="margin: 25px auto;">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=campground.name%>" name="campground[name]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=campground.image%>" name="campground[image]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=campground.description%>" name="campground[description]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" value="<%=campground.price%>" name="campground[price]" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <button class="btn btn-md btn-primary btn-block">Submit!</button>
                </div>
                <a href="/campgrounds">Go back to Campgrounds!</a>
            </div>
        </div>
    </form>


</div>
<% include ../partials/footer %>